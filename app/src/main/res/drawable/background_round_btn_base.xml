<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@android:color/white">

    <item android:color="@android:color/white" android:state_enabled="false">
        <shape>
            <solid android:color="@color/colorIconDark" />
            <corners android:radius="@dimen/button_round" />
        </shape>
    </item>

    <item android:color="@android:color/white" android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorAccentPress" />
            <corners android:radius="@dimen/button_round" />
        </shape>
    </item>

    <item android:color="@android:color/white" android:state_activated="true">
        <shape>
            <solid android:color="@color/colorIcon" />
            <corners android:radius="@dimen/button_round" />
        </shape>
    </item>

    <item android:color="@android:color/white">
        <shape>
            <solid android:color="@color/colorAccentUi" />
            <corners android:radius="@dimen/button_round" />
        </shape>
    </item>

</selector>