<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".transitions.using_scenes.ScenesInsideActivity3">

    <FrameLayout
        android:id="@+id/scene_root_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_content_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="@string/nav_header_subtitle"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/scene_1_enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDecor11"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/scene_enter"
            android:textColor="@color/colorWhite" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/scene_1_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDecor11"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/scene_exit"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/scene_root_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/scene_2_enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDecor11"
            android:gravity="center"
            android:text="@string/scene_enter"
            android:textColor="@color/colorWhite" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/scene_2_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorDecor11"
            android:gravity="center"
            android:text="@string/scene_exit"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</LinearLayout>
