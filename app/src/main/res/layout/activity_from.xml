<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/activity_from_root_id"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".navgraph.ActivityGraph2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape_oval_blue" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape_oval_green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape_oval_red" />

        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape_oval_orange" />

    </LinearLayout>


</LinearLayout>

