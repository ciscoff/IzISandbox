<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <!-- under_layer -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/under_layer_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/under_layer_text_left_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/doer_action_delete"
                android:textColor="@color/colorWhite"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/pb_left_4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:indeterminateOnly="true"
                android:theme="@style/CircularProgressWhite"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/pb_right_4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:indeterminateOnly="true"
                android:theme="@style/CircularProgressWhite"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/under_layer_text_right_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/doer_action_delete"
                android:textColor="@color/colorWhite"
                android:visibility="invisible"
                tools:text="Отказаться"
                tools:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/under_layer_icon_left_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="12dp"
            android:contentDescription="@null"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:visibility="invisible"
            app:srcCompat="@drawable/vd_delete_white" />

        <ImageView
            android:id="@+id/under_layer_icon_right_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="12dp"
            android:contentDescription="@null"
            android:visibility="invisible"
            app:srcCompat="@drawable/vd_doer_white" />

    </com.google.android.material.card.MaterialCardView>

    <!-- middle layer
    Это слой, у которого прозрачный фон внутри рамки с закругленными внутренними углами.
    Требуется для того, чтобы анимировать смену цвета внутри MaterialCardView underLayer.
    Проблема в том, что при анимаровании цвета у карты не работают cardCornerRadius
    и приходится накладывать ещё один слой, чтобы было закругление.
     -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_rounded_transparent" />

    <!-- upper layer -->
    <LinearLayout
        android:id="@+id/detail_row_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_slider_round_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        tools:visibility="invisible">

        <ImageView
            android:id="@+id/iv_row_icon_4"
            android:layout_width="@dimen/order_editor_header_stroke_height"
            android:layout_height="@dimen/order_editor_header_stroke_height"
            android:layout_gravity="center"
            app:srcCompat="@drawable/vd_client_state_confirmed" />

        <TextView
            android:id="@+id/tv_content_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/order_options_text_padding"
            android:paddingEnd="@dimen/order_options_text_padding"
            android:textColor="@color/colorOrderServices"
            android:textSize="@dimen/order_date_size"
            tools:text="Hello" />

        <!--        To delete -->
        <ImageView
            android:id="@+id/iv_action_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="invisible"
            app:srcCompat="@drawable/vd_bucket" />

    </LinearLayout>
</FrameLayout>

