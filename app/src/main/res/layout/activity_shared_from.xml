<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|start"
    android:orientation="vertical">

    <View
        android:id="@+id/view_colored_blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_oval_blue"
        android:transitionName="@string/shared_transition_colored" />

    <Space
        android:layout_width="10dp"
        android:layout_height="12dp" />

    <View
        android:id="@+id/view_colored_green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_oval_green"
        android:transitionName="@string/shared_transition_colored" />

    <Space
        android:layout_width="10dp"
        android:layout_height="12dp" />

    <View
        android:id="@+id/view_colored_red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_oval_red"
        android:transitionName="@string/shared_transition_colored" />

    <Space
        android:layout_width="10dp"
        android:layout_height="12dp" />

    <View
        android:id="@+id/view_colored_orange"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_oval_orange"
        android:transitionName="@string/shared_transition_colored" />

</LinearLayout>