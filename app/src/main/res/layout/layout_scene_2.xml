<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingEnd="40dp">

    <ImageView
        android:id="@+id/ball_green"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:background="@drawable/shape_oval_green"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/ball_blue"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        android:background="@drawable/shape_oval_blue"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/ball_red"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/ball_green"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:background="@drawable/shape_oval_red"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/ball_orange"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ball_blue"
        android:layout_margin="12dp"
        android:background="@drawable/shape_oval_orange"
        android:contentDescription="@null" />

</RelativeLayout>