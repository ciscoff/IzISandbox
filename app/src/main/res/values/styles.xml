<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Разрешить "наложение" (одновременное выполнение) анимаций -->
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- Added for Auth Ui-->
        <item name="android:textColorLink">@color/colorAccentUi</item>

    </style>

    <style name="TelegramTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="StickyDecorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeTransitions" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#9E9E9E</item>

        <!-- Включить поддержку анимаций -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Разрешить "наложение" (одновременное выполнение) анимаций -->
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/slide_left_transition</item>
        <item name="android:windowExitTransition">@transition/slide_and_fade</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/change_bounds</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_bounds</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Button icon only style-->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!--    Login UI styles -->
    <!-- ===================================== -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/background_round_btn</item>
    </style>

    <!-- Тема для Checkbox -->
    <style name="LoginCheckBoxTheme" parent="AppTheme">
        <item name="colorOnSurface">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccentUi</item>
    </style>

    <!--    Progress Bar-->
    <style name="CircularProgressWhite" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="MaterialAnimations.Button.Scaled" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:scaleX">0</item>
        <item name="android:scaleY">0</item>
    </style>

    <!-- Убираем вернхнюю тень android:windowContentOverlay -->
    <style name="CustomBottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- ===================== BottomAppBar UI ====================  -->
    <!-- Кнопка без теней -->
    <style name="EditorButtonUndo.Filled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorDecor2</item>
        <item name="android:strokeColor">@color/colorDecor14</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="backgroundTint">@color/colorDecor14</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <!-- Кнопка без теней -->
    <style name="EditorButtonSave.Filled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorDecor4</item>
        <item name="android:strokeColor">@color/colorDecor15</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
        <item name="backgroundTint">@color/colorDecor15</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>